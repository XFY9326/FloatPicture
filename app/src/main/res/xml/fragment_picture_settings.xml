<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_general">
        <Preference
            android:selectAllOnFocus="true"
            app:iconSpaceReserved="false"
            app:key="settings_picture_name"
            app:singleLine="true"
            app:summary="@string/settings_picture_name_sum"
            app:title="@string/settings_picture_name" />
    </PreferenceCategory>
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_picture_control">
        <Preference
            android:selectAllOnFocus="true"
            app:iconSpaceReserved="false"
            app:key="settings_picture_resize"
            app:singleLine="true"
            app:summary="@string/settings_picture_resize_sum"
            app:title="@string/settings_picture_resize" />
        <Preference
            android:selectAllOnFocus="true"
            app:iconSpaceReserved="false"
            app:key="settings_picture_degree"
            app:singleLine="true"
            app:summary="@string/settings_picture_degree_sum"
            app:title="@string/settings_picture_degree" />
        <Preference
            android:selectAllOnFocus="true"
            app:iconSpaceReserved="false"
            app:key="settings_picture_alpha"
            app:singleLine="true"
            app:summary="@string/settings_picture_alpha_sum"
            app:title="@string/settings_picture_alpha" />
    </PreferenceCategory>
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_window">
        <Preference
            android:selectAllOnFocus="true"
            app:dependency="settings_picture_touchable_and_moveable"
            app:iconSpaceReserved="false"
            app:key="settings_picture_position"
            app:singleLine="true"
            app:summary="@string/settings_picture_position_sum"
            app:title="@string/settings_picture_position" />
        <CheckBoxPreference
            android:selectAllOnFocus="true"
            app:disableDependentsState="true"
            app:iconSpaceReserved="false"
            app:key="settings_picture_touchable_and_moveable"
            app:singleLine="true"
            app:summary="@string/settings_picture_touchable_and_moveable_sum"
            app:title="@string/settings_picture_touchable_and_moveable" />
        <CheckBoxPreference
            android:selectAllOnFocus="true"
            app:iconSpaceReserved="false"
            app:key="settings_allow_picture_over_layout"
            app:singleLine="true"
            app:summary="@string/settings_allow_picture_over_layout_sum"
            app:title="@string/settings_allow_picture_over_layout" />
    </PreferenceCategory>
</PreferenceScreen>